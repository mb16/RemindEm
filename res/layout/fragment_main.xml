<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/button_set_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_cancel_alarm"
        android:layout_alignBottom="@+id/button_cancel_alarm"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:text="Set Alarm" />

    <Button
        android:id="@+id/button_cancel_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="28dp"
        android:text="Cancel Alarm" />

    <TextView
        android:id="@+id/textView_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_cancel_alarm"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="123dp"
        android:text="" />

</RelativeLayout>